{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="vh-100 bg-image"
  style="background-image: url('https://blog.trainme.co/wp-content/uploads/2021/06/Images-de-mise-en-avant-et-contenu.png');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              {{ form_errors(registrationForm) }}

              {{ form_start(registrationForm) }}

                <div class="form-outline mb-4">
                  {{ form_row(registrationForm.username,
                  {'attr': { 'class':"form-control form-control-lg"}}
                  ) }}
                </div>

                <div class="form-outline mb-4">
                  {{ form_row(registrationForm.plainPassword, 
                  {label: 'Password', 'attr': { 'class':"form-control form-control-lg"} }, 
                  ) }}
                </div>

                <div class="form-check d-flex justify-content-center mb-5">
                    {{ form_row(registrationForm.agreeTerms, 
                    {'attr': { 'class':"form-check-input me-2"}}
                    ) }}
                    
                    <label class="form-check-label" for="form2Example3g">
                    &nbsp; <strong> I agree all statements in </strong><a href="#!" class="text-body"><u>Terms of service</u></a>
                  </label>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/login"
                    class="fw-bold text-body"><u>Login here</u></a></p>

              {{ form_end(registrationForm) }}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<footer class="bg-body-tertiary text-center text-lg-start">
  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
